    <div class="loadBg" ng-show="loader" style="z-index:99">
        
        <div ng-cloak ng-controller="loaderController"></div>
        <div class="data_loadingxt1" ng-show="loader">Data Loading...</div>
        <img src="~/Images/trans.png" alt="Wipro" width="100%" height="100%" border="0" alt="Loading..." />
    </div>

    <div class="container-fluid posi_relative">
        
        <div ng-show="parentBgHome" class="parentBg hidden-xs"></div>
        <div class="parentBg2 hidden-xs"></div>
        <nav class="navbar1 navbar-default">
            <div class="brandBlock">
                <h2 class="digiGradi1">Digital Signage</h2>
            </div>
            <div class="rgtUserDetials">
                <ul class="nav navbar-nav navbar-right rgt_right_ul">
                    <li class="welcome_note">
                        <span>
                            Welcome<br>
                        </span>
                        <span class="user"><img src="~/Images/user.png" /></span>
                    </li>
                    <li class="dropdown rgt_right_ul_li">
                        @if (Session["SignInType"] != null && Session["SignInType"].ToString() == "ADLogin")
                        {
                            UserViewModel loginuser = new UserViewModel();
                            loginuser.UserName = User.Identity.Name;
                            Session["UserName"] = loginuser.UserName;

                            <a href="#" class="dropdown-toggle rgt_drp" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@HttpContext.Current.Session["UserName"] <span class="right_user_Arrow"><img src="~/Images/right_user_Arrow.png" /></span></a>
                        }
                        else
                        {
                        <a href="#" class="dropdown-toggle rgt_drp" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@HttpContext.Current.Session["UserName"] <span class="right_user_Arrow"><img src="~/Images/right_user_Arrow.png" /></span></a>
                        }
                        <ul class="dropdown-menu">
                            @*<li><a href="#">User Profile</a></li>
                            <li><a href="#">Profile Settings</a></li>*@
                            <li><a data-toggle="modal" href="#changePassword" ng-click="resetPassData()">Change password</a></li>
                            <li>@Html.ActionLink("Logout", "SignOut", "Account")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
            <nav class="navbar navbar-default">
                <div>
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button> 
                        <a class="navbar-brand logo1_align" href="#"><img src="~/Images/wipro.png" /></a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling  -->

                    <div class="collapse navbar-collapse nav_align" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav main_menu wideScrn ">
                            @*<li> @Html.ActionLink("Dashboard", "Dashboard", "Home") </li>*@
                            @*<li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    Device
                                    <span class="caret"></span>
                                </a>

                                <ul class="dropdown-menu mobiPosi">
