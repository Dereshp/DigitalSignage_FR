                                    <li>@Html.ActionLink("Device Group", "PlayerGroup", "Home")</li>
                                </ul>
                            </li>*@
                            <li>@Html.ActionLink("Home", "HomePage", "Home")</li>
                            <li>  @Html.ActionLink("Content", "Scenes", "Home") </li>
                            <li>  @Html.ActionLink("Playlist", "Campaign", "Home") </li>
                            <li>  @Html.ActionLink("Device Group", "Station", "Home") </li>
                            <li>  @Html.ActionLink("Device", "Player", "Home") </li>
                            
                            
                            @if (Session["LoggedUser"] != null)
                            {
                                UserViewModel loggedUser = new UserViewModel();
                                loggedUser = (UserViewModel)Session["LoggedUser"];

                                if (loggedUser.Role != "User")
                                {
                                    <li> @Html.ActionLink("Admin", "Settings", "Home") </li>
                                }
                               
                            }

                        </ul>
                    </div>
                    <!-- /.navbar-collapse -->
                </div>
                <!-- /.container-fluid -->
                <div class="bg_gradi"></div>
            </nav>

            <div class="clearfix"></div>
        <!-- Modal -->
        <div class="modal fade" id="changePassword" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" >&times;</button>
                        <h4 class="modal-title"><b>Change Password</b></h4>
                    </div>
                    <div class="modal-body">
                        <span class="alert" ng-class="showErrMsg == 'Success'?'alrtTxtSuccess':'failMsg'" id="success" ng-bind="errMsg"></span>
                        <div class="form-group">
                            <div class="">
                                <label>Old password</label>
                                <input type="password" class="form-control"ng-model="password.oldPassword" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="">
                                <label>New password</label>
                                <input type="password" class="form-control"ng-model="password.newPassword" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="">
                                <label>Confirm password</label>
                                <input type="password" class="form-control" ng-model="password.confirmPassword" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="">
                                <button type="submit" class="btn btn-info" ng-disabled="((password.oldPassword == undefined || password.oldPassword== null) && (password.newPassword == undefined || password.newPassword== null)|| (password.confirmPassword == undefined || password.confirmPassword== null))" ng-click="updatePassword(password)">Submit</button>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cancel</button>
                    </div>
                </div>

            </div>
        </div>
