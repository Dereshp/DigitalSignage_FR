                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox  Grid.ColumnSpan="2" Grid.Row="1" Foreground="#333333" 
                      x:Name="timeText"  FontFamily="Century Gothic" FontWeight="Normal" 
                      Text="03 : 39 PM"  Background="Transparent" VerticalContentAlignment="Center" 
                      HorizontalContentAlignment="Center" FontSize="32" BorderThickness="0" IsReadOnly="True"></TextBox>

            <TextBox  Grid.ColumnSpan="2" Grid.Row="0" Foreground="#333333"  
                      x:Name="dateText"  FontFamily="Century Gothic" FontWeight="Normal"  
                      Text="Saturday, Feb 2, 2018"  Background="Transparent" VerticalContentAlignment="Center" 
                      HorizontalContentAlignment="Center" FontSize="18" BorderThickness="0" IsReadOnly="True"></TextBox>

            <TextBox   Grid.Column="0" Grid.Row="2" Foreground="#1d9fd0"  
                      x:Name="tempText"  FontFamily="Century Gothic" FontWeight="Normal"  
                      Text="25° F"  Background="Transparent" VerticalContentAlignment="Center" 
                      HorizontalContentAlignment="Center" FontSize="32" BorderThickness="0" 
                       Margin="4,0,0,0" IsReadOnly="True"></TextBox>


            <Image Name="weatherIcon" Width="45px" Margin="-20 0 0 0" 
                   Height="45px"  Grid.Column="1" Grid.Row="2" 
                   Source="http://l.yimg.com/a/i/us/we/52/32.gif"></Image>

        </Grid>-->

        <!-- Header row -->
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" x:Name="HeaderRow" Visibility="Collapsed">
            <local:TopBarUC x:Name="TopBar"  UseLayoutRounding="True" d:LayoutRounding="Auto" ScreenName="DeviceInfo" >

            </local:TopBarUC>
        </Grid>

        <!-- Maker image security notice row -->
        <Grid Visibility="Collapsed" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" x:Name="SecurityNoticeRow" Background="#FF363636"  >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="48" />
                </Grid.ColumnDefinitions>
                <TextBlock FontSize="14" VerticalAlignment="Center" Grid.Column="0" TextWrapping="WrapWholeWords" Foreground="#FFFEFEFE" Text="{Binding [MakerImageNoticeText]}" Margin="12,0"></TextBlock>
                <Button FontSize="14" VerticalAlignment="Center" Height="32" Width="120" Grid.Column="1" Name="SecurityNoticeLearnMoreButton" Background="#FF0078D7" Content="{Binding [LeanMoreText]}" Click="SecurityNoticeLearnMoreButton_Click" />
                <Button FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="2" Name="CloseNoticeButton" Foreground="#FFFEFEFE" Background="Transparent" Click="CloseNoticeButton_Click">
                    <TextBlock FontFamily="{StaticResource IconFontFamily}" Text="{StaticResource IconCancel}" TextAlignment="Center"/>
                </Button>
            </Grid>
        </Grid>

        <!-- Content row -->
        <ScrollViewer Visibility="Collapsed" Grid.Row="2" Name="ContentRow" HorizontalScrollMode="Disabled" >
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Left panel -->
                <Grid HorizontalAlignment="Right">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="24" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="44" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid HorizontalAlignment="Center">
                        <Ellipse Margin="24,16,0,0" Width="240" Height="240" HorizontalAlignment="Left" VerticalAlignment="Top" Fill="White"/>
                        <Image x:Name="BoardImage" VerticalAlignment="Center" Source="ms-appx:///Assets/300.png" Stretch="Fill" Width="200" Height="200" HorizontalAlignment="Center"/>
                    </Grid>


                    <StackPanel  Grid.Row="2" Orientation="Horizontal">
                        <TextBlock Text="NodeServer EndPoint"  Style="{StaticResource SubtitleTextBlockStyle}" />
                        <TextBox Width="250"   Text="Website Address" Margin="10 0 5 0" 
                                 Name="WebAddress" IsReadOnly="True"/>
                        <Button Width="60" Height="30" 
                                        Content="Edit" 
                                        Name="WebAddressButton"
                                        Click="Button_Click" FontFamily="Segoe UI"></Button>
                    </StackPanel>


                    <TextBlock Grid.Row="4" Text="{Binding [NetworkInformationText]}" FontFamily="Segoe UI Regular" FontSize="16"/>

                    <ListView Grid.Row="5" x:Name="NetworkInfo" ItemsPanel="{StaticResource NetworkInfoPanelTemplate}" ItemTemplate="{StaticResource NetworkInfoDataTemplate}" >
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="VerticalContentAlignment" Value="Top" />
                                <Setter Property="HorizontalAlignment" Value="Left" />
                                <Setter Property="VerticalAlignment" Value="Top" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>

                </Grid>

                <!-- Right Panel -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="16" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="72" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="16" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="16" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" x:Name="BoardName" Style="{StaticResource SubheaderTextBlockStyle}" Foreground="{StaticResource AccentBrush}" Text="IoTCore Device"/>

                    <StackPanel Grid.Row="2">
                        <TextBlock Text="{Binding [MainPageDeviceNameText]}" Style="{StaticResource BaseTextBlockStyle}" />
                        <TextBox x:Name="DeviceName" IsReadOnly="True" BorderThickness="0" Foreground="{StaticResource PaleTextBrush}" FocusEngaged="DeviceName_FocusEngaged"/>
                        <TextBlock Text="{Binding [MainPageNetworkText]}" x:Name="NetworkNameCaption" Style="{StaticResource BaseTextBlockStyle}" Margin="0,16,0,0" />
                        <TextBlock x:Name="NetworkName1" Style="{StaticResource BodyTextBlockStyle}" Foreground="{StaticResource PaleTextBrush}" />
                        <TextBlock Text="{Binding [MainPageIPAddressText]}" x:Name="IPAddressCaption" Style="{StaticResource BaseTextBlockStyle}" Margin="0,16,0,0" />
                        <TextBlock x:Name="IPAddress1" Style="{StaticResource BodyTextBlockStyle}" Foreground="{StaticResource PaleTextBrush}"/>
                        <TextBlock Text="{Binding [MainPageOSVersionText]}" x:Name="OSVersionCaption" Style="{StaticResource BaseTextBlockStyle}" Margin="0,16,0,0" />
                        <TextBlock x:Name="OSVersion" Style="{StaticResource BodyTextBlockStyle}" Foreground="{StaticResource PaleTextBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4">
                        <TextBlock Text="{Binding [ConnectedDevicesText]}" Style="{StaticResource BaseTextBlockStyle}" />
                        <ItemsControl x:Name="ConnectedDevices" Foreground="{StaticResource PaleTextBrush}" />
                    </StackPanel>
                    <StackPanel Grid.Row="6"  HorizontalAlignment="Right">
                        <TextBlock x:Name="AppxVersion" Style="{StaticResource BodyTextBlockStyle}" Foreground="{StaticResource PaleTextBrush}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </ScrollViewer>

    </Grid>
</Page>
